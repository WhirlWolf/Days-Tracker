{
    "id": "simple_card",
    "name": "Simple Card",
    "description": "A simple calendar-like 2x2 card showing one event at a time.",
    "creator": {
        "name": "WhirlWolf",
        "contact": "https://t.me/android_automation_group"
    },
    "type": "card",
    "size": "2x2",
    "items_per_view": "Single",
    "version": "1.1",
    "preview": "https://raw.githubusercontent.com/WhirlWolf/Days-Tracker/refs/heads/main/images/material_you-simple_card.jpg",
    "tags": [
        "minimal",
        "simple",
        "resizable"
    ],
    "date_created": "2025-08-22",
    "date_updated": "2025-08-29",
    "min_project_version": "2.4.20250925",
    "min_tasker_version": "6.4-stable",
    "defaults": {
        "text_size_event": "22",
        "text_size_date": "16",
        "text_size_track": "16",
        "text_size_days": "75",
        "text_size_label": "16"
    },
    "structure": {
        "children": [
            {
                "blur": "10",
                "contentScale": "Crop",
                "tint": "#60000000",
                "url": "%background_image",
                "isWeighted": true,
                "size": "fill",
                "type": "Image",
                "useMaterialYouColors": true
            },
            {
                "children": [
                    {
                        "children": [
                            {
                                "align": "Center",
                                "bold": true,
                                "color": "%text_color_event",
                                "fontFamily": "%font",
                                "maxLines": 2,
                                "text": "%event_name",
                                "textSize": "%text_size_event",
                                "cornerRadius": "100",
                                "isWeighted": false,
                                "padding": {
                                    "top": 10,
                                    "bottom": 12,
                                    "start": 20,
                                    "end": 20
                                },
                                "type": "Text"
                            }
                        ],
                        "horizontalAlignment": "Center",
                        "verticalAlignment": "Center",
                        "backgroundColor": "%accent_color",
                        "command": "%command",
                        "commandPrefix": "DT",
                        "isWeighted": false,
                        "size": {
                            "fillMaxWidth": true
                        },
                        "type": "Box"
                    },
                    {
                        "children": [
                            {
                                "scrolling": false,
                                "children": [
                                    {
                                        "align": "Center",
                                        "bold": true,
                                        "color": "%text_color_days",
                                        "fontFamily": "%font",
                                        "text": "%event_days",
                                        "textSize": "%text_size_days",
                                        "isWeighted": true,
                                        "type": "Text",
                                        "useMaterialYouColors": true
                                    },
                                    {
                                        "align": "Center",
                                        "color": "%text_color_label",
                                        "fontFamily": "%font",
                                        "text": "%event_label",
                                        "textSize": "%text_size_label",
                                        "isWeighted": false,
                                        "type": "Text",
                                        "useMaterialYouColors": true
                                    }
                                ],
                                "horizontalAlignment": "Center",
                                "verticalAlignment": "Center",
                                "backgroundColor": "#00000000",
                                "isWeighted": false,
                                "type": "Column"
                            }
                        ],
                        "horizontalAlignment": "Center",
                        "verticalAlignment": "Center",
                        "backgroundColor": "%body_color",
                        "isWeighted": false,
                        "size": "fill",
                        "type": "Box",
                        "useMaterialYouColors": true
                    }
                ],
                "horizontalAlignment": "Center",
                "backgroundColor": "#00000000",
                "isWeighted": false,
                "size": "fill",
                "type": "Column",
                "useMaterialYouColors": true
            }
        ],
        "horizontalAlignment": "Center",
        "verticalAlignment": "Top",
        "backgroundColor": "#00000000",
        "cornerRadius": "%corner_radius",
        "isWeighted": true,
        "type": "Box",
        "useMaterialYouColors": true
    }
}
