{
    "id": "simple_card",
    "name": "Simple Card",
    "description": "A simple calendar-like 2x2 card showing one event at a time.",
    "creator": {
        "name": "WhirlWolf",
        "contact": "https://t.me/android_automation_group"
    },
    "type": "Card",
    "size": "2x2",
    "version": "1.2",
    "preview": "https://raw.githubusercontent.com/WhirlWolf/Days-Tracker/refs/heads/main/images/simple_card-material_you.jpg",
    "features": [
        "minimal",
        "simple",
        "resizable"
    ],
    "date_created": "2025-08-22",
    "date_updated": "2025-10-20",
    "min_project_version": "2.4.20251025",
    "min_tasker_version": "6.4-stable",
    "defaults": {
        "text_size_event_title": "22",
        "text_size_event_days": "75",
        "text_size_event_label": "16"
    },
    "structure": {
        "children": [
            {
                "blur": "10",
                "contentScale": "Crop",
                "tint": "#60000000",
                "url": "%image",
                "isWeighted": true,
                "size": "fill",
                "type": "Image",
                "useMaterialYouColors": true
            },
            {
                "children": [
                    {
                        "children": [
                            {
                                "align": "Center",
                                "bold": true,
                                "color": "%text_color_event_title",
                                "fontFamily": "%font_primary",
                                "maxLines": 2,
                                "text": "%event_title",
                                "textSize": "%text_size_event_title",
                                "cornerRadius": "100",
                                "isWeighted": false,
                                "padding": {
                                    "top": 10,
                                    "bottom": 10,
                                    "start": 20,
                                    "end": 20
                                },
                                "type": "Text"
                            }
                        ],
                        "horizontalAlignment": "Center",
                        "verticalAlignment": "Center",
                        "backgroundColor": "%color_accent",
                        "command": "%command",
                        "commandPrefix": "DT",
                        "isWeighted": false,
                        "size": {
                            "fillMaxWidth": true
                        },
                        "type": "Box"
                    },
                    {
                        "children": [
                            {
                                "scrolling": false,
                                "children": [
                                    {
                                        "align": "Center",
                                        "bold": true,
                                        "color": "%text_color_event_days",
                                        "fontFamily": "%font_primary",
                                        "text": "%event_days",
                                        "textSize": "%text_size_event_days",
                                        "isWeighted": true,
                                        "type": "Text",
                                        "useMaterialYouColors": true
                                    },
                                    {
                                        "align": "Center",
                                        "color": "%text_color_event_label",
                                        "fontFamily": "%font_primary",
                                        "text": "%event_label!",
                                        "textSize": "%text_size_event_label",
                                        "isWeighted": false,
                                        "type": "Text",
                                        "useMaterialYouColors": true
                                    }
                                ],
                                "horizontalAlignment": "Center",
                                "verticalAlignment": "Center",
                                "backgroundColor": "#00000000",
                                "isWeighted": false,
                                "type": "Column"
                            }
                        ],
                        "horizontalAlignment": "Center",
                        "verticalAlignment": "Center",
                        "backgroundColor": "%background_color",
                        "isWeighted": false,
                        "size": "fill",
                        "type": "Box",
                        "useMaterialYouColors": true
                    }
                ],
                "horizontalAlignment": "Center",
                "backgroundColor": "#00000000",
                "isWeighted": false,
                "size": "fill",
                "type": "Column",
                "useMaterialYouColors": true
            }
        ],
        "horizontalAlignment": "Center",
        "verticalAlignment": "Top",
        "backgroundColor": "#00000000",
        "cornerRadius": "%corner_radius",
        "isWeighted": true,
        "type": "Box",
        "useMaterialYouColors": true
    }
}
